@page
@model CreateModel


@{
    ViewData["Title"] = "Add Product";
}

<form  method="post">
    <div class="mb-3">
        <label asp-for="Product.Name" class="form-label"></label>
        <input asp-for="Product.Name" class="form-control" autocomplete="off"/>
    </div>
    <div class="mb-3">
        <label asp-for="Product.Price" class="form-label"></label>
        <input asp-for="Product.Price" class="form-control" autocomplete="off"/>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Products/Index" class="btn btn-secondary">Cancel</a>
</form>